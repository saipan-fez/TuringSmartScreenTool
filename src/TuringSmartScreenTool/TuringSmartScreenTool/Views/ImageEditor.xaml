<UserControl x:Class="TuringSmartScreenTool.Views.ImageEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:TuringSmartScreenTool.ViewModels"
             xmlns:view="clr-namespace:TuringSmartScreenTool.Views"
             xmlns:cvt="clr-namespace:TuringSmartScreenTool.Views.Converters"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:Background="White"
             d:DataContext="{d:DesignInstance vm:ImageEditorViewModel}">
    <UserControl.Resources>
    </UserControl.Resources>
    <ui:SimpleStackPanel Orientation="Vertical" Style="{StaticResource PageSimpleStackPanel}">
        <view:CommonEditor/>
        <TextBlock Text="Image" Style="{StaticResource ContentTitleTextBlock}"/>
        <ui:SimpleStackPanel Orientation="Horizontal" Spacing="5">
            <Button Content="Select" Command="{Binding SelectImageCommand}"/>
            <TextBlock Text="{Binding ImageFilePath.Value}"
                       VerticalAlignment="Center"/>
        </ui:SimpleStackPanel>
    </ui:SimpleStackPanel>
</UserControl>
