<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:ui="http://schemas.modernwpf.com/2019"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type ui:AppBarButton}">
        <Setter Property="IsCompact" Value="True"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="30"/>
    </Style>
    <Style TargetType="ui:NumberBox">
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="SpinButtonPlacementMode" Value="Compact"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style x:Key="ContentTitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>
    <Style x:Key="ContentSubTitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>
    <Style x:Key="PageSimpleStackPanel" TargetType="{x:Type ui:SimpleStackPanel}">
        <Setter Property="Spacing" Value="10"/>
    </Style>
    <Style x:Key="ContentSimpleStackPanel" TargetType="{x:Type ui:SimpleStackPanel}">
        <Setter Property="Spacing" Value="5"/>
    </Style>
</ResourceDictionary>
